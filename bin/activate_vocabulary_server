#!/usr/bin/env python

import sys
import os.path

current_dir_path = os.path.dirname(os.path.abspath(__file__))
lib_path = os.path.normpath(os.path.join(current_dir_path, "../lib/bot/brain"))
sys.path.append(lib_path)

from vocabulary_server import VocabularyServer

socket_path = os.path.normpath(os.path.join(current_dir_path, "../vocabulary_server.sock"))
server = VocabularyServer()
try:
    server.start(socket_path)
except KeyboardInterrupt:
    os.remove(socket_path)